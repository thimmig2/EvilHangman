
<div class="page-header">
  <h1>Create your Evil Hangman account</h1>
  <em>Enter your information and click save to start playing!</em>
</div>

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user account from being saved:</h4>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<fieldset>

  <div class="row">
    <div class="span6">
      <span class="label label-info">Username</span><br/><br/>
      <%= f.text_field :username, :size => 40 %><br/><br/>
    </div>
    <div class="span6">
      <span class="label label-info">Image Url (Not Required)</span><br/><br/>
      <%= f.text_field :profile_image_url %><br/><br/>
    </div>

  </div>
  <div class="row">
    <div class="span6">
      <span class="label label-info">Password</span><br/><br/>
      <%= f.password_field :password, :size => 40 %><br/><br/>
    </div>

    <div class="span6">
      <span class="label label-info">Confirm Password</span><br/><br/>
      <%= f.password_field :password_confirmation, :size => 40 %><br/><br/>
    </div>

  </div>

  <div class="row">
    <div class="span6">
      <%= link_to 'Back', game_path, :class=> "btn btn-info "%>
    </div>
    <div class="span6">
      <%= submit_tag "Save", :class=> "btn btn-info "%>
    </div>
  </div>

</fieldset>
<% end %>



