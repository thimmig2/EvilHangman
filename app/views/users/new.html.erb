
<h1>Create your Evil Hangman account</h1>

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user account from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<fieldset>
  <legend>Enter your information and click save to start playing!</legend>
  <div class="row">
    <div class="span6">
      <span class="label label-info">Username</span><br/><br/>
      <%= f.text_field :username, :size => 40 %><br/><br/>
    </div>

    <div class="span6">
      <span class="label label-info">Password</span><br/><br/>
      <%= f.text_field :password, :size => 40 %><br/><br/>
    </div>
  </div>
  <div class="row">

    <div class="span6">
      <span class="label label-info">Image url</span><br/><br/>
      <%= f.text_field :profile_image_url %><br/><br/>
    </div>
    <div class="span6">
      <span class="label label-info">Confirm Password</span><br/><br/>
      <%= f.text_field :password_confirmation, :size => 40 %><br/><br/>
    </div>


  </div>
  <div class="row">
    <div class="span6">
      <%= button_to 'Back', login_path, :class=> "btn btn-info "%>
    </div>
    <div class="span6">
      <%= submit_tag "Save", :class=> "btn btn-info "%>
    </div>
  </div>

</fieldset>
<% end %>



