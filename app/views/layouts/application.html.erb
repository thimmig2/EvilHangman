<!DOCTYPE html>
<html>
<head>
  <title>EvilHangman</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag    "my_css", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if session[:user_id] %>
    <br/>
    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="#">Evil Hangman</a>
        <ul class="nav">
          <li><%= link_to 'Home', game_path %></li>
          <li><%= link_to 'New Game', hangman_path(), :method => 'GET' %></li>
          <li><%= link_to 'Logout', logout_path, :method => :delete %></li>
        </ul>
      </div>
    </div>
<% end %>
<div id="main">
  <%= yield %>
</div>
</body>
</html>
