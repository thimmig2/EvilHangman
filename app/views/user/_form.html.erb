<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hashed_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hashed_password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :salt, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :salt, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :profile_image_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :profile_image_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_type, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_path, :class => 'btn' %>
  </div>
<% end %>
